<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".ForgotPasswordActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarror"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot Password ?"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Donâ€™t worry! It happens. Please enter the
        email associated with your account."
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="235dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundstyles2"
        android:hint="Enter Email"
        android:padding="5dp"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300dp"
        android:backgroundTint="#50C0C7"
        android:text="Send"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember your password ?"
        android:textSize="19dp"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="30dp"
    />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:clickable="true"
        android:textColor="@color/mainColor"
        android:layout_marginTop="360dp"
        android:layout_marginLeft="270dp"
        android:textSize="19dp"
        />








</RelativeLayout>