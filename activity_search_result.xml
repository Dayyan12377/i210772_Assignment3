<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".SearchResultActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/intro_circle"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="-70dp"
        android:id="@+id/first_circle"

        />


    <ImageView

        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/intro_circle"
        android:layout_marginTop="-135dp"

        />


    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/backarror"
        android:layout_margin="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Search Results"
        android:textSize="30dp"
        android:textColor="@color/mainColor"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Color3"
        android:text="Filter"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="300dp"
        android:textColor="@color/mainColor"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="180dp"
        android:orientation="horizontal"
        >

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@drawable/roundstyles4"
            android:layout_margin="20dp"
            />

        <LinearLayout
            android:layout_width="250dp"
            android:layout_height="60dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/roundstyles5"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sample 1"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lead tech. officer"
                android:paddingLeft="10dp"
                android:paddingTop="3dp"
                />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layout_marginTop="300dp"
        android:orientation="horizontal"
        >

