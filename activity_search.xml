<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".SearchActivity"
    >


    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/intro_circle"
        android:layout_marginStart="-120dp"
        android:layout_marginTop="-70dp"
        android:id="@+id/first_circle"

        />


    <ImageView

        android:layout_width="250dp"
        android:layout_height="250dp"
        android:src="@drawable/intro_circle"
        android:layout_marginTop="-135dp"

        />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/backarror"
        android:layout_margin="20dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        android:text="Let's Find..."
        android:textSize="30dp"
        android:textColor="@color/mainColor"
        />


    <EditText
        android:id="@+id/editTextSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter your search query"
        android:inputType="text"
        android:background="@drawable/roundstyles2"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        android:padding="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="170dp"
        android:text="Recent Searches"
        android:textSize="20dp"
        android:textColor="@color/mainColor"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="200dp"
        android:text="Mentor 1"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/cross"
        android:layout_marginLeft="370dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="250dp"
        android:text="Mentor 2"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="250dp"
        android:background="@drawable/cross"
        android:layout_marginLeft="370dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="300dp"
        android:text="Mentor 3"
        android:textSize="20dp"
        android:textColor="@color/black"
        />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="300dp"
        android:background="@drawable/cross"
        android:layout_marginLeft="370dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/Color3"
        android:layout_marginTop="350dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Browse Categories"
            android:textColor="@color/mainColor"
            android:textSize="20dp"
            android:layout_margin="10dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Entrepreneurship"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="10dp"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_out"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="370dp"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Personal Growth"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="10dp"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_out"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="370dp"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Education"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="10dp"

            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/arrow_out"
            android:layout_marginTop="190dp"
            android:layout_marginLeft="370dp"
            />

    </RelativeLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:menu="@menu/bottomnavigation"
            android:background="@color/mainColor"

            />


    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>