<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#def8f8"
    tools:context=".ResetPasswordActivity">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/backarror"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reset Password ?"
        android:textColor="@color/mainColor"
        android:textSize="30dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="70dp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please type a new password and re-enter the password. Type something you will
        remember!"
        android:textSize="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="120dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="210dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="245dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundstyles2"
        android:hint="Enter New Password"
        android:padding="5dp"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Password"
        android:textSize="25dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="290dp"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="325dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/roundstyles2"
        android:hint="Re-Enter Password"
        android:padding="5dp"
        android:textColor="@color/white"
        tools:ignore="TouchTargetSizeCheck" />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="400dp"
        android:backgroundTint="#50C0C7"
        android:text="Reset Password"
        android:textColor="@color/white"
        android:textSize="30dp"
        tools:ignore="TextContrastCheck" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Don't want to reset Password?"
        android:textSize="19dp"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="30dp"

        />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:clickable="true"
        android:textColor="@color/mainColor"
        android:layout_marginTop="470dp"
        android:layout_marginLeft="290dp"
        android:textSize="19dp"
        />






</RelativeLayout>