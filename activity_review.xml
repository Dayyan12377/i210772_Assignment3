<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="4"
    android:orientation="vertical"
    android:background="#def8f8"
    tools:context=".ReviewActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2.7"
        android:background="@drawable/layout_bottom"
        >

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/backarror"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:text="Hi, I'm"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="110dp"
            android:text="John Cooper"
            android:textSize="30dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@mipmap/personaa_round"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="250dp"

            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="180dp"
            android:text="Drop me a Review"
            android:textSize="25dp"
            android:textColor="@color/white"
            />

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/review_smile"
            android:layout_marginTop="185dp"
            android:layout_marginLeft="220dp"
            />




    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <EditText
            android:layout_width="380dp"
            android:layout_height="200dp"
            android:background="@drawable/roundstyles6"
            android:hint="Type your experience..."
            android:layout_marginTop="70dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="20dp"
            />

        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hollow_stars"
            android:layout_marginTop="300dp"
            android:layout_marginLeft="110dp"
            />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hollow_stars"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/star1"
            />


        <ImageView
            android:id="@+id/star3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hollow_stars"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/star2"
            />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hollow_stars"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/star3"
            />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/hollow_stars"
            android:layout_marginTop="300dp"
            android:layout_toRightOf="@id/star4"
            />



        <Button
            android:layout_width="380dp"
            android:layout_height="50dp"
            android:text="Submit Feedback"
            android:textSize="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:backgroundTint="@color/mainColor"
            android:layout_marginTop="420dp"

            />




    </RelativeLayout>


</LinearLayout>